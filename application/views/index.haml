%title Senthil and Leela's Home

:javascript
  $(document).ready(function() {
    $("#tobuy_form").submit(function(event) { 
      event.preventDefault();
      $.post($(this).attr('action'), $(this).serialize(), function(response) {
        $("#msg").html(response);
      });
    });
  });

%div(style="border:1px solid lightgray;float:left") 
  <h3>Things to buy</h3>

  %hr 

  -@tags.each do |tag|
    %a(href='#')=tag.name

  %hr
  %form#tobuy_form(method='post' action='/item/tobuy')

    %table
      %tr
        %td
          %label(for='item_name') Item:
        %td
          %input(type='text' name='item_name')
      %tr
        %td
          %label(for='quantity') Quantity:
        %td
          %input(type='text' name='quantity')
      %tr
        %td(colspan="2" align="center")
          %input#add(type='submit' value="Buy") 

      %tr
        %td(colspan="2" align="center")
          #msg

  %hr
  %a{:href => '/item/new'} Add item to master list 
